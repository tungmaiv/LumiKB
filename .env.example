# LumiKB Environment Configuration
# Copy to .env and update values for your environment
# Note: Backend settings use LUMIKB_ prefix

# Application
LUMIKB_APP_NAME=LumiKB
LUMIKB_APP_VERSION=0.1.0
LUMIKB_DEBUG=false

# Server
LUMIKB_HOST=0.0.0.0
LUMIKB_PORT=8000

# Database
LUMIKB_DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/lumikb

# Security
LUMIKB_SECRET_KEY=change-me-in-production-use-openssl-rand-hex-32
LUMIKB_JWT_ALGORITHM=HS256
LUMIKB_JWT_EXPIRY_MINUTES=60

# CORS
LUMIKB_CORS_ORIGINS=["http://localhost:3000"]

# Vector Database (Qdrant)
LUMIKB_QDRANT_HOST=localhost
LUMIKB_QDRANT_PORT=6333
LUMIKB_QDRANT_GRPC_PORT=6334

# Object Storage (MinIO)
LUMIKB_MINIO_ENDPOINT=localhost:9000
LUMIKB_MINIO_ACCESS_KEY=minioadmin
LUMIKB_MINIO_SECRET_KEY=minioadmin
LUMIKB_MINIO_BUCKET=lumikb-documents

# Cache/Queue (Redis)
LUMIKB_REDIS_URL=redis://localhost:6379/0
LUMIKB_CELERY_BROKER_URL=redis://localhost:6379/1

# LLM Gateway (LiteLLM)
LUMIKB_LITELLM_URL=http://localhost:4000
LUMIKB_LITELLM_API_KEY=your-api-key-here
